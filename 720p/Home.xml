	<onload>Skin.SetString(AspectRatio,$INFO[Skin.AspectRatio])</onload>
	<onload>Skin.Reset(pp_helper)</onload>
	<onunload>Skin.Reset(pp_helper)</onunload>
	<onload>Skin.Reset(dsp_helper)</onload>
	<onunload>CancelAlarm(controlType,true)</onunload>
	<controls>
		<!-- PHT NoFocus Bug Workaround -->
		<control type="button" id="301">
			<posx>-20</posx>
			<posy>-20</posy>
			<width>0</width>
			<height>0</height>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
			<onfocus>Skin.Reset(pp_helper)</onfocus>
			<onfocus>SetFocus(300)</onfocus>
		</control>
		<include condition="Skin.HasSetting(HideFanart)">BGBlackEdition</include>
		<include>SlideshowHome</include>
		<include>HomeMenuDefault</include>
		<include>HomeLists</include>
		<include>viewtype_nowplaying_right_home</include>
		<include>CurrentUserAvatar</include>
		<include>debugInfos</include>
		<include>Grid</include>
		<include>WindowFade</include>
		<include>Non16x9Cache</include>
	</controls>
</window>